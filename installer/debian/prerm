#!/bin/bash
set -e

echo "=== ADA-Pi-System Pre-Remove Script ==="

echo "Stopping services..."
systemctl stop ada-pi-system-ups.service || true
systemctl stop ada-pi-system-network.service || true
systemctl stop ada-pi-system-modem.service || true
systemctl stop ada-pi-system-gps.service || true
systemctl stop ada-pi-system-bluetooth.service || true
systemctl stop ada-pi-system-fan.service || true
systemctl stop ada-pi-system-tacho-monitor.service || true
systemctl stop ada-pi-system-tacho-uploader.service || true
systemctl stop ada-pi-system-logs.service || true
systemctl stop ada-pi-system-web.service || true

echo "=== Services Stopped ==="
